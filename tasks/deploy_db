- name: Install all dependences
  yum:
    state: present
    name:
    - "epel-release"
    - "oracle-epel-release-el8"
    - "python3"
    - "python3-devel"
    #- "python-setuptools"
    #- "mysql-connector-python"
    #- "python-pip"
- name: Install MySQL community repository
  yum:
    name: "http://repo.mysql.com/mysql-community-release-el7-5.noarch.rpm"
    disable_gpg_check: yes
    state: present

- name: Install mysql
  yum:
    state: present
    name:
     - "mysql-server"
     - "mysql-devel"

- name: Start mysql
  service:
    name: mysqld
    state: started
    enabled: yes

- name: Start mysql
  service:
    name: firewalld
    state: started
    enabled: yes
